VAR FechaEntrega = tblReportes[FechaCreacion]
RETURN
    IF(
        FechaEntrega <= FechaEsperada,
        "A Tiempo",
        "Fuera de Plazo"
    )

5.3 D√≠as de atraso o anticipaci√≥n

DiasDiferencia = 
VAR FechaEsperada = RELATED(tblCronograma[FechaEsperada])
VAR FechaEntrega = tblReportes[FechaCreacion]
RETURN
    DATEDIFF(FechaEsperada, FechaEntrega, DAY)


